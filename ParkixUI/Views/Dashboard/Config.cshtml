
@{
    ViewData["Title"] = "Config";
}

<h2>Configure - @ViewData["id"]</h2>

<div class="container-fluid">

    <div class="row">

        <div class="col-lg-12">

            <div id="adminimage">

                <img src="@ViewData["image"]" id="target" style="width: 960; height: 1280" />

            </div>
            <div class="form-group">
            <div class="inline-labels" style="padding-top: 10px;">

                <label>X1 <input type="text" size="4" id="x1" name="x1" /></label>

                <label>Y1 <input type="text" size="4" id="y1" name="y1" /></label>

                <label>X2 <input type="text" size="4" id="x2" name="x2" /></label>

                <label>Y2 <input type="text" size="4" id="y2" name="y2" /></label>

                <label>W <input type="text" size="4" id="w" name="w" /></label>

                <label>H <input type="text" size="4" id="h" name="h" /></label>

                <button type="button" id="saveButton" class="btn btn-primary">Save</button>

                <button type="button" id="sendButton" class="btn btn-primary">Send All Points</button>

            </div>
            </div>
        </div>

        <!-- /.col-lg-12 -->

    </div>

    <!-- /.row -->

</div>

<script type="text/javascript">

    $(document).ready(function() {

                $( "#saveButton" ).click(function() {
                    var coord = new coordinates($('#x1').val(), $('#x2').val(), $('#y1').val(), $('#y2').val())
                    spotsArray.push(new Spot(spotCt, coord));
                    spotCt += 1;
                    jcrop_api.release();
                });

                $( "#sendButton" ).click(function() {
                    alert(JSON.stringify(spotsArray));
                    $.ajax({
                        type: "POST",
                        url:'https://cp-parking-process-api.run.aws-usw02-pr.ice.predix.io/api/configuration/sensor/'+ getUrlVars()["id"] + '/config/',
                        data: JSON.stringify(spotsArray),
                        contentType: 'application/json',
                        success: function(data) {
                            alert("Camera configuration has been updated.");
                        }
                    })
                });

                var jcrop_api;
                $('#target').Jcrop({
                onChange:   showCoords,
                onSelect:   showCoords,
                onRelease:  clearCoords
                },function(){
                jcrop_api = this;
                });

                $('#coords').on('change','input',function(e){
                var x1 = $('#x1').val(),
                    x2 = $('#x2').val(),
                    y1 = $('#y1').val(),
                    y2 = $('#y2').val();
                jcrop_api.setSelect([x1,y1,x2,y2]);
                });

        class Rectangle {
        constructor(x1, x2, y1, y2) {
            this.x1 = x1;
            this.x2 = x2;
            this.y1 = y1;
            this.y2 = y2;
        }
        }

        class coordinates {
            constructor(x1, x2, y1, y2) {
                this.x1 = parseInt(x2);
                this.y1 = parseInt(y2);
                this.x2 = parseInt(x1);
                this.y2 = parseInt(y1);
                this.x3 = parseInt(x1);
                this.y3 = parseInt(y2);
                this.x4 = parseInt(x2);
                this.y4 = parseInt(y2);
            }
        }

        class Spot {
            constructor(id, coords) {
                this.spotid = id;
                this.coordinates = coords;
            }
        }
    var spotsArray = new Array();
    var spotCt = 1;

    // Simple event handler, called from onChange and onSelect
    // event handlers, as per the Jcrop invocation above

    function showCoords(c)
    {
        $('#x1').val(c.x);
        $('#y1').val(c.y);
        $('#x2').val(c.x2);
        $('#y2').val(c.y2);
        $('#w').val(c.w);
        $('#h').val(c.h);
    };

    function clearCoords()

    {
        $('#coords input').val('');
    };

</script>

